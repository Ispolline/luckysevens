                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m122"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m122"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m122"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X8"
                        android:textColor="#ff758c"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"

                        android:gravity="end"
                        android:textSize="15sp"
                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/mcv_m133"
                    app:cardBackgroundColor="#a3bded"
                    android:layout_below="@+id/mcv_m122"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m133"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m133"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m133"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X6"
                        android:textColor="#ff758c"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="15sp"
                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/mcv_m144"
                    app:cardBackgroundColor="#a3bded"
                    android:layout_below="@+id/mcv_m133"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m144"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m144"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m144"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X4"
                        android:textColor="#ff758c"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="15sp"
                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/mcv_m155"
                    android:layout_below="@+id/mcv_m144"
                    app:cardBackgroundColor="#a3bded"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/m155"
                            />
                        <ImageView
                            android:layout_width="20dp"
