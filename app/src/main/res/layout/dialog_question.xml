                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X2"
                        android:textColor="#ff758c"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
